---
import Section from "@/components/Section.astro";
import { projects } from "@cv";
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(({ url, description, highlights, name, isActive }) => (
        <li>
          <article>
            <header>
              <h3>
                <a href={url} title={`Ver el proyecto ${name}`}>
                  {name}
                </a>
                {isActive && <span>&bull;</span>}
              </h3>

              <p>{description}</p>
            </header>
            <footer>
              {highlights.map((highlight) => (
                <span>{highlight}</span>
              ))}
            </footer>
          </article>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 16px;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
    font-size: 1.28rem;
  }

  article p {
    font-size: 0.9rem;
  }

  article h3 span {
    color: rgb(0, 188, 64);
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #333;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
